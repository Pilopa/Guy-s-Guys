<UserControl x:Class="Guys_Guys_App.View.Control.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Guys_Guys_App.View.Control"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="300" Width="300">
        <Label x:Name="lbl_login" Content="Login" HorizontalAlignment="Center" FontWeight="Bold" FontSize="24"/>
        <TextBox x:Name="txtbx_username" Height="23" />
        <PasswordBox x:Name="pwbx_password" Height="23"/>
        <Button x:Name="btn_login" Content="Login" Click="btn_login_Click"/>
    </StackPanel> 

</UserControl>
